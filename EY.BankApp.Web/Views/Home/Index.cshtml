@model List<UserListModel>
@addTagHelper *,EY.BankApp.Web

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="mt-4 table table-hover table-bordered table-sm">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Account Count</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td> <get-account-count app-user-id="@item.Id"></get-account-count> </td>
                <td>
                    <a asp-action="Create" asp-controller="Account" asp-route-id="@item.Id">Create New Account</a>
                    <a asp-action="GetByUserId" asp-controller="Account" asp-route-userId="@item.Id">Get Accounts</a>
                </td>
            </tr>
        }
    </tbody>
</table>
